def selection_sort(arr):
    # Проходим по каждому элементу массива
    for i in range(len(arr)):
        # Инициализируем индекс минимального элемента текущей позиции
        min_idx = i
        
        # Ищем минимальный элемент в оставшейся части массива
        for j in range(i + 1, len(arr)):
            if arr[j] < arr[min_idx]:
                # Обновляем индекс минимального элемента, если нашли меньшее значение
                min_idx = j
        
        # Меняем местами текущий элемент с найденным минимальным элементом
        arr[i], arr[min_idx] = arr[min_idx], arr[i]
    
    # Возвращаем отсортированный массив
    return arr


# Пример использования функции
numbers = [64, 25, 12, 22, 11]
print(selection_sort(numbers))  # Выводим отсортированный массив
